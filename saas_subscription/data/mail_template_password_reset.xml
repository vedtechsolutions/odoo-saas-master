<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mail_template_saas_password_reset" model="mail.template">
            <field name="name">SaaS: Password Reset</field>
            <field name="model_id" ref="saas_master.model_saas_instance"/>
            <field name="email_from">noreply@vedtechsolutions.com</field>
            <field name="email_to">{{ object.admin_email_plain }}</field>
            <field name="subject">Your Password Has Been Reset</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: Arial, Helvetica, sans-serif;">
    <table style="width: 100%; max-width: 600px; margin: 0 auto; background: #ffffff;">
        <tr>
            <td style="background: #714B67; padding: 20px; text-align: center;">
                <h1 style="color: white; margin: 0;">Password Reset</h1>
            </td>
        </tr>
        <tr>
            <td style="padding: 30px;">
                <p style="font-size: 16px; color: #333;">Dear <t t-out="object.partner_id.name or 'Valued Customer'"/>,</p>
                <p style="font-size: 16px; color: #333;">Your password has been reset.</p>
                <div style="background: #fff3cd; border: 2px solid #ffc107; border-radius: 8px; padding: 20px; margin: 20px 0;">
                    <h3 style="color: #856404; margin-top: 0;">Your New Credentials:</h3>
                    <p><strong>Instance:</strong> <t t-out="object.subdomain"/>.tenants.vedtechsolutions.com</p>
                    <p><strong>Username:</strong> <t t-out="object.admin_login or 'admin'"/></p>
                    <p><strong>Password:</strong> <t t-out="object.admin_password_plain or ''"/></p>
                </div>
                <p>Best regards,<br/><strong>VedTech Solutions Team</strong></p>
            </td>
        </tr>
    </table>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
