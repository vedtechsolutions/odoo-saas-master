<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="saas_tenant_server_view_form" model="ir.ui.view">
        <field name="name">saas.tenant.server.form</field>
        <field name="model">saas.tenant.server</field>
        <field name="arch" type="xml">
            <form string="Tenant Server">
                <header>
                    <button name="action_check_health" type="object"
                            string="Check Health" class="oe_highlight"
                            invisible="state == 'offline'"/>
                    <button name="action_set_online" type="object"
                            string="Set Online"
                            invisible="state == 'online'"/>
                    <button name="action_set_maintenance" type="object"
                            string="Maintenance Mode"
                            invisible="state == 'maintenance'"/>
                    <button name="action_set_offline" type="object"
                            string="Set Offline"
                            invisible="state == 'offline'"/>
                    <button name="action_refresh_stats" type="object"
                            string="Refresh Stats" icon="fa-refresh"
                            invisible="state not in ('online', 'maintenance')"/>
                    <button name="action_sync_instances" type="object"
                            string="Sync Instances" icon="fa-sync"
                            class="oe_highlight"
                            invisible="state not in ('online', 'maintenance')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="offline,online,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-cubes"
                                name="action_view_instances" type="object">
                            <field name="instance_count" widget="statinfo" string="Instances"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Error" bg_color="text-bg-danger"
                            invisible="state != 'error'"/>
                    <widget name="web_ribbon" title="Full" bg_color="text-bg-warning"
                            invisible="state != 'full'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Tenant Server 1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Identification">
                            <field name="server_code"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Network">
                            <field name="ip_address"/>
                            <field name="vpn_ip"/>
                            <field name="ssh_port"/>
                        </group>
                    </group>
                    <group>
                        <group string="Docker Configuration">
                            <field name="docker_api_port"/>
                            <field name="docker_api_url"/>
                        </group>
                        <group string="Capacity">
                            <field name="max_instances"/>
                            <field name="instance_count"/>
                            <field name="available_slots"/>
                            <field name="port_range_start"/>
                            <field name="port_range_end"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Resource Usage" name="resources">
                            <group>
                                <group>
                                    <field name="cpu_usage_percent" widget="progressbar"/>
                                    <field name="ram_usage_percent" widget="progressbar"/>
                                    <field name="disk_usage_percent" widget="progressbar"/>
                                </group>
                                <group>
                                    <field name="last_health_check"/>
                                </group>
                            </group>
                        </page>
                        <page string="Instances" name="instances">
                            <field name="instance_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="subdomain"/>
                                    <field name="state"/>
                                    <field name="port_http"/>
                                    <field name="partner_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Audit" name="audit">
                            <group>
                                <group>
                                    <field name="created_by_id"/>
                                    <field name="created_date"/>
                                </group>
                                <group>
                                    <field name="updated_by_id"/>
                                    <field name="updated_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="saas_tenant_server_view_tree" model="ir.ui.view">
        <field name="name">saas.tenant.server.tree</field>
        <field name="model">saas.tenant.server</field>
        <field name="arch" type="xml">
            <list string="Tenant Servers" decoration-danger="state == 'error'"
                  decoration-warning="state == 'full'"
                  decoration-muted="state == 'offline'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="server_code"/>
                <field name="ip_address"/>
                <field name="vpn_ip"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'online'"
                       decoration-warning="state in ('maintenance', 'full')"
                       decoration-danger="state == 'error'"
                       decoration-muted="state == 'offline'"/>
                <field name="instance_count"/>
                <field name="max_instances"/>
                <field name="available_slots"/>
                <field name="last_health_check"/>
            </list>
        </field>
    </record>

    <!-- Kanban View (Odoo 19: t-name="card") -->
    <record id="saas_tenant_server_view_kanban" model="ir.ui.view">
        <field name="name">saas.tenant.server.kanban</field>
        <field name="model">saas.tenant.server</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="server_code"/>
                <field name="state"/>
                <field name="ip_address"/>
                <field name="instance_count"/>
                <field name="max_instances"/>
                <field name="available_slots"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="ip_address"/>
                                    </span>
                                </div>
                                <field name="state" widget="label_selection"
                                       options="{'classes': {
                                           'offline': 'secondary',
                                           'online': 'success',
                                           'maintenance': 'warning',
                                           'full': 'warning',
                                           'error': 'danger'
                                       }}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="d-flex justify-content-between">
                                    <span>Capacity:</span>
                                    <span>
                                        <field name="instance_count"/> / <field name="max_instances"/>
                                    </span>
                                </div>
                                <field name="instance_count" widget="progressbar"
                                       options="{'max_value': 'max_instances'}"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="text-success" t-if="record.available_slots.raw_value > 0">
                                        <i class="fa fa-check" title="Available"/>
                                        <field name="available_slots"/> slots
                                    </span>
                                    <span class="text-danger" t-else="">
                                        <i class="fa fa-times" title="Full"/>
                                        Full
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View (Odoo 19: no expand attribute) -->
    <record id="saas_tenant_server_view_search" model="ir.ui.view">
        <field name="name">saas.tenant.server.search</field>
        <field name="model">saas.tenant.server</field>
        <field name="arch" type="xml">
            <search string="Search Servers">
                <field name="name"/>
                <field name="server_code"/>
                <field name="ip_address"/>
                <filter name="filter_online" string="Online"
                        domain="[('state', '=', 'online')]"/>
                <filter name="filter_available" string="Has Capacity"
                        domain="[('available_slots', '>', 0)]"/>
                <filter name="filter_error" string="Error"
                        domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_saas_tenant_server" model="ir.actions.act_window">
        <field name="name">Tenant Servers</field>
        <field name="res_model">saas.tenant.server</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="saas_tenant_server_view_search"/>
        <field name="context">{'search_default_filter_online': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first tenant server
            </p>
            <p>
                Add Docker host servers where customer Odoo instances will run.
            </p>
        </field>
    </record>

</odoo>
