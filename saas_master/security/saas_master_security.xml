<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups (Odoo 19 syntax - no category_id or users field) -->

    <record id="group_saas_user" model="res.groups">
        <field name="name">SaaS / User</field>
        <field name="comment">Basic access to view SaaS instances and plans</field>
    </record>

    <record id="group_saas_manager" model="res.groups">
        <field name="name">SaaS / Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_saas_user'))]"/>
        <field name="comment">Can manage instances, plans, and subscriptions</field>
    </record>

    <record id="group_saas_admin" model="res.groups">
        <field name="name">SaaS / Administrator</field>
        <field name="implied_ids" eval="[(4, ref('group_saas_manager'))]"/>
        <field name="comment">Full access to all SaaS platform features including servers</field>
    </record>

    <!-- Make System Administrator automatically have SaaS Admin access -->
    <!-- This ensures admin users can always see and manage all SaaS resources -->
    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_saas_admin'))]"/>
    </record>

    <!-- Record Rules -->

    <!-- All SaaS users can see all instances (simplified rule) -->
    <record id="rule_instance_user" model="ir.rule">
        <field name="name">SaaS Instance: All users see all</field>
        <field name="model_id" ref="model_saas_instance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_saas_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Managers have full access to all instances -->
    <record id="rule_instance_manager" model="ir.rule">
        <field name="name">SaaS Instance: Manager full access</field>
        <field name="model_id" ref="model_saas_instance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_saas_manager'))]"/>
    </record>

    <!-- Only admins can manage servers -->
    <record id="rule_server_admin" model="ir.rule">
        <field name="name">SaaS Server: Admin only</field>
        <field name="model_id" ref="model_saas_tenant_server"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_saas_admin'))]"/>
    </record>

</odoo>
