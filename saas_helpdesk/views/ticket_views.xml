<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== TICKET FORM VIEW ==================== -->
    <record id="saas_ticket_view_form" model="ir.ui.view">
        <field name="name">saas.ticket.form</field>
        <field name="model">saas.ticket</field>
        <field name="arch" type="xml">
            <form string="Support Ticket">
                <header>
                    <button name="action_open" string="Acknowledge"
                            type="object" class="btn-primary"
                            invisible="state != 'new'"/>
                    <button name="action_start_progress" string="Start Progress"
                            type="object" class="btn-primary"
                            invisible="state not in ['new', 'open', 'pending']"/>
                    <button name="action_pending" string="Pending Customer"
                            type="object"
                            invisible="state not in ['open', 'in_progress']"/>
                    <button name="action_resolve" string="Resolve"
                            type="object" class="btn-success"
                            invisible="state in ['resolved', 'closed', 'cancelled']"/>
                    <button name="action_close" string="Close"
                            type="object" class="btn-success"
                            invisible="state in ['closed', 'cancelled']"/>
                    <button name="action_reopen" string="Reopen"
                            type="object"
                            invisible="state not in ['resolved', 'closed']"/>
                    <button name="action_cancel" string="Cancel"
                            type="object" class="btn-secondary"
                            invisible="state in ['closed', 'cancelled']"
                            confirm="Are you sure you want to cancel this ticket?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,open,in_progress,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_messages" type="object"
                                class="oe_stat_button" icon="fa-comments">
                            <field name="ticket_message_count" widget="statinfo" string="Messages"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="reference"/>
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" placeholder="Subject"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Customer">
                            <field name="partner_id"/>
                            <field name="partner_email"/>
                            <field name="partner_phone"/>
                        </group>
                        <group string="Classification">
                            <field name="category_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Assignment">
                            <field name="user_id"/>
                            <button name="action_assign_to_me" string="Assign to Me"
                                    type="object" class="btn-link"
                                    invisible="user_id == uid"/>
                        </group>
                        <group string="Related Records">
                            <field name="instance_id"
                                   domain="[('partner_id', '=', partner_id)]"/>
                            <field name="subscription_id"
                                   domain="[('partner_id', '=', partner_id)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Messages" name="messages">
                            <button name="action_send_reply" string="Send Reply"
                                    type="object" class="btn-primary mb-3"
                                    icon="fa-reply"/>
                            <field name="ticket_message_ids" mode="list">
                                <list string="Messages" create="0" edit="0">
                                    <field name="create_date"/>
                                    <field name="author_name"/>
                                    <field name="is_internal"/>
                                    <field name="is_customer_message"/>
                                    <field name="attachment_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="SLA" name="sla">
                            <group>
                                <group string="Response">
                                    <field name="first_response_date"/>
                                    <field name="sla_response_hours"/>
                                    <field name="sla_response_status" widget="badge"
                                           decoration-success="sla_response_status == 'met'"
                                           decoration-info="sla_response_status == 'on_track'"
                                           decoration-warning="sla_response_status == 'warning'"
                                           decoration-danger="sla_response_status == 'breached'"/>
                                </group>
                                <group string="Resolution">
                                    <field name="resolved_date"/>
                                    <field name="sla_resolution_hours"/>
                                    <field name="sla_resolution_status" widget="badge"
                                           decoration-success="sla_resolution_status == 'met'"
                                           decoration-info="sla_resolution_status == 'on_track'"
                                           decoration-warning="sla_resolution_status == 'warning'"
                                           decoration-danger="sla_resolution_status == 'breached'"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="deadline"/>
                                    <field name="closed_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ==================== TICKET LIST VIEW ==================== -->
    <record id="saas_ticket_view_list" model="ir.ui.view">
        <field name="name">saas.ticket.list</field>
        <field name="model">saas.ticket</field>
        <field name="arch" type="xml">
            <list string="Tickets"
                  decoration-danger="priority == '3'"
                  decoration-warning="priority == '2'"
                  decoration-muted="state in ['closed', 'cancelled']">
                <field name="reference"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <field name="priority" widget="priority"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="sla_response_status" widget="badge"
                       decoration-success="sla_response_status == 'met'"
                       decoration-info="sla_response_status == 'on_track'"
                       decoration-warning="sla_response_status == 'warning'"
                       decoration-danger="sla_response_status == 'breached'"/>
                <field name="state" widget="badge"
                       decoration-success="state in ['resolved', 'closed']"
                       decoration-info="state in ['new', 'open']"
                       decoration-warning="state in ['pending', 'in_progress']"
                       decoration-danger="state == 'cancelled'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- ==================== TICKET KANBAN VIEW ==================== -->
    <record id="saas_ticket_view_kanban" model="ir.ui.view">
        <field name="name">saas.ticket.kanban</field>
        <field name="model">saas.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="reference"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="color"/>
                <field name="category_id"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="reference"/>
                                    </strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-truncate">
                                    <field name="name"/>
                                </div>
                                <div class="text-muted">
                                    <i class="fa fa-user me-1" title="Customer"/>
                                    <field name="partner_id"/>
                                </div>
                                <div class="text-muted" t-if="record.category_id.raw_value">
                                    <i class="fa fa-tag me-1" title="Category"/>
                                    <field name="category_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ==================== TICKET SEARCH VIEW ==================== -->
    <record id="saas_ticket_view_search" model="ir.ui.view">
        <field name="name">saas.ticket.search</field>
        <field name="model">saas.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="reference"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="category_id"/>
                <separator/>
                <filter name="filter_my_tickets" string="My Tickets"
                        domain="[('user_id', '=', uid)]"/>
                <filter name="filter_unassigned" string="Unassigned"
                        domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter name="filter_new" string="New"
                        domain="[('state', '=', 'new')]"/>
                <filter name="filter_open" string="Open"
                        domain="[('state', 'in', ['new', 'open', 'in_progress'])]"/>
                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_resolved" string="Resolved"
                        domain="[('state', '=', 'resolved')]"/>
                <filter name="filter_closed" string="Closed"
                        domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter name="filter_urgent" string="Urgent"
                        domain="[('priority', '=', '3')]"/>
                <filter name="filter_high" string="High Priority"
                        domain="[('priority', 'in', ['2', '3'])]"/>
                <separator/>
                <filter name="filter_sla_breached" string="SLA Breached"
                        domain="['|', ('sla_response_status', '=', 'breached'), ('sla_resolution_status', '=', 'breached')]"/>
                <separator/>
                <filter name="group_state" string="State"
                        context="{'group_by': 'state'}"/>
                <filter name="group_priority" string="Priority"
                        context="{'group_by': 'priority'}"/>
                <filter name="group_category" string="Category"
                        context="{'group_by': 'category_id'}"/>
                <filter name="group_user" string="Assignee"
                        context="{'group_by': 'user_id'}"/>
                <filter name="group_partner" string="Customer"
                        context="{'group_by': 'partner_id'}"/>
                <filter name="group_create_date" string="Created"
                        context="{'group_by': 'create_date:month'}"/>
            </search>
        </field>
    </record>

    <!-- ==================== MESSAGE VIEWS ==================== -->
    <record id="saas_ticket_message_view_form" model="ir.ui.view">
        <field name="name">saas.ticket.message.form</field>
        <field name="model">saas.ticket.message</field>
        <field name="arch" type="xml">
            <form string="Ticket Message">
                <sheet>
                    <group>
                        <field name="ticket_id" readonly="1"
                               invisible="context.get('default_ticket_id')"/>
                        <field name="author_id"/>
                        <field name="is_internal"/>
                    </group>
                    <group string="Message">
                        <field name="body" nolabel="1"/>
                    </group>
                    <group string="Attachments">
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Save &amp; Close" class="btn-primary" special="save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="saas_ticket_message_view_list" model="ir.ui.view">
        <field name="name">saas.ticket.message.list</field>
        <field name="model">saas.ticket.message</field>
        <field name="arch" type="xml">
            <list string="Messages" create="0">
                <field name="ticket_reference"/>
                <field name="create_date"/>
                <field name="author_name"/>
                <field name="is_internal"/>
                <field name="is_customer_message"/>
                <field name="attachment_count"/>
            </list>
        </field>
    </record>

    <!-- ==================== TAG VIEWS ==================== -->
    <record id="saas_ticket_tag_view_list" model="ir.ui.view">
        <field name="name">saas.ticket.tag.list</field>
        <field name="model">saas.ticket.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- ==================== ACTIONS ==================== -->
    <record id="saas_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">saas.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="saas_ticket_view_search"/>
        <field name="context">{'search_default_filter_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No support tickets yet
            </p>
            <p>
                Create tickets to track customer support requests.
            </p>
        </field>
    </record>

    <record id="saas_ticket_action_my" model="ir.actions.act_window">
        <field name="name">My Tickets</field>
        <field name="res_model">saas.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="saas_ticket_view_search"/>
        <field name="context">{'search_default_filter_my_tickets': 1, 'search_default_filter_open': 1}</field>
    </record>

    <record id="saas_ticket_action_unassigned" model="ir.actions.act_window">
        <field name="name">Unassigned Tickets</field>
        <field name="res_model">saas.ticket</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="saas_ticket_view_search"/>
        <field name="domain">[('user_id', '=', False), ('state', 'not in', ['closed', 'cancelled'])]</field>
    </record>

    <record id="saas_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">saas.ticket.tag</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
