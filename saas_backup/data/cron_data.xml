<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ==================== BACKUP SCHEDULED ACTIONS ==================== -->

        <!-- Run Scheduled Backups - Every hour -->
        <record id="cron_run_scheduled_backups" model="ir.cron">
            <field name="name">SaaS: Run Scheduled Backups</field>
            <field name="model_id" ref="model_saas_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_run_scheduled_backups()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

        <!-- Cleanup Expired Backups - Daily -->
        <record id="cron_cleanup_expired_backups" model="ir.cron">
            <field name="name">SaaS: Cleanup Expired Backups</field>
            <field name="model_id" ref="model_saas_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_cleanup_expired()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
