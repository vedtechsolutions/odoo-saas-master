<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (formerly Tree View) -->
    <record id="view_powertranz_recurring_list" model="ir.ui.view">
        <field name="name">powertranz.recurring.list</field>
        <field name="model">powertranz.recurring</field>
        <field name="arch" type="xml">
            <list string="Recurring Payments" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'" decoration-warning="state == 'paused'" decoration-success="state == 'active'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="frequency"/>
                <field name="next_payment_date"/>
                <field name="payment_count"/>
                <field name="management_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_powertranz_recurring_form" model="ir.ui.view">
        <field name="name">powertranz.recurring.form</field>
        <field name="model">powertranz.recurring</field>
        <field name="arch" type="xml">
            <form string="Recurring Payment">
                <header>
                    <button name="action_activate" type="object" string="Activate" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_pause" type="object" string="Pause" class="btn btn-warning" invisible="state != 'active'"/>
                    <button name="action_resume" type="object" string="Resume" class="oe_highlight" invisible="state != 'paused'"/>
                    <button name="action_pay_now" type="object" string="Pay Now" class="btn btn-primary" invisible="state not in ('active', 'paused')" help="Process a payment immediately"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger" invisible="state not in ('draft', 'active', 'paused')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,paused,cancelled,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="payment_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" readonly="state != 'draft'"/>
                            <field name="payment_token_id" readonly="state != 'draft'"/>
                            <field name="provider_id" readonly="1"/>
                            <field name="amount" readonly="state != 'draft'" widget="monetary"/>
                            <field name="currency_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="management_type" readonly="state != 'draft'"/>
                            <field name="frequency" readonly="state != 'draft'"/>
                            <field name="start_date" readonly="state != 'draft'"/>
                            <field name="end_date" readonly="state != 'draft'"/>
                            <field name="next_payment_date" readonly="1" widget="datetime"/>
                            <field name="powertranz_recurring_identifier" readonly="1" invisible="not powertranz_recurring_identifier"/>
                        </group>
                    </group>
                    <group string="Payment History">
                        <field name="last_payment_date" readonly="1"/>
                        <field name="last_payment_status" readonly="1"/>
                        <field name="retry_count" readonly="1" invisible="management_type != 'merchant'"/>
                        <field name="max_retry_count" readonly="state != 'draft'" invisible="management_type != 'merchant'"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1" readonly="state != 'draft'"/>
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field name="transaction_ids" readonly="1" widget="many2many" options="{'no_create': True, 'no_open': True}"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_powertranz_recurring_search" model="ir.ui.view">
        <field name="name">powertranz.recurring.search</field>
        <field name="model">powertranz.recurring</field>
        <field name="arch" type="xml">
            <search string="Recurring Payments">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="powertranz_recurring_identifier"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Merchant Managed" name="merchant_managed" domain="[('management_type', '=', 'merchant')]"/>
                <filter string="PowerTranz Managed" name="powertranz_managed" domain="[('management_type', '=', 'powertranz')]"/>
                <group>
                    <filter string="Customer" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Management Type" name="group_by_management_type" context="{'group_by': 'management_type'}"/>
                    <filter string="Frequency" name="group_by_frequency" context="{'group_by': 'frequency'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_powertranz_recurring" model="ir.actions.act_window">
        <field name="name">Recurring Payments</field>
        <field name="res_model">powertranz.recurring</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No recurring payments found
            </p>
            <p>
                Recurring payments are created when customers set up subscription payments through PowerTranz.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_powertranz_root" name="PowerTranz" sequence="100"/>
    <menuitem id="menu_powertranz_recurring" name="Recurring Payments" parent="menu_powertranz_root" action="action_powertranz_recurring" sequence="10"/>
</odoo>
