<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== SECURITY GROUPS ==================== -->

    <!-- Helpdesk User - Can view and work on tickets -->
    <record id="group_helpdesk_user" model="res.groups">
        <field name="name">Helpdesk / User</field>
        <field name="comment">Can view, create, and respond to support tickets</field>
    </record>

    <!-- Helpdesk Manager - Full access to helpdesk -->
    <record id="group_helpdesk_manager" model="res.groups">
        <field name="name">Helpdesk / Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_helpdesk_user'))]"/>
        <field name="comment">Full access to helpdesk configuration and all tickets</field>
    </record>

    <!-- ==================== RECORD RULES ==================== -->

    <!-- Tickets: Users see all tickets, can edit assigned/unassigned -->
    <record id="ticket_rule_user" model="ir.rule">
        <field name="name">Tickets: Users see all</field>
        <field name="model_id" ref="model_saas_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Tickets: Managers can do everything -->
    <record id="ticket_rule_manager" model="ir.rule">
        <field name="name">Tickets: Managers full access</field>
        <field name="model_id" ref="model_saas_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_helpdesk_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Categories: Users can read, Managers full access -->
    <record id="category_rule_user" model="ir.rule">
        <field name="name">Categories: Users read only</field>
        <field name="model_id" ref="model_saas_ticket_category"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_helpdesk_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="category_rule_manager" model="ir.rule">
        <field name="name">Categories: Managers full access</field>
        <field name="model_id" ref="model_saas_ticket_category"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_helpdesk_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
