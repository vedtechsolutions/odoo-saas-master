<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Security Configuration Parameters

        These parameters store sensitive configuration that should NOT be hardcoded.
        After installation, update these values with your actual credentials.
        -->

        <!-- Tenant Server SSH Configuration -->
        <record id="config_tenant_ssh_key_path" model="ir.config_parameter">
            <field name="key">saas.tenant_ssh_key_path</field>
            <field name="value">/root/.ssh/tenant_key</field>
        </record>

        <record id="config_tenant_ssh_user" model="ir.config_parameter">
            <field name="key">saas.tenant_ssh_user</field>
            <field name="value">root</field>
        </record>

        <!-- Tenant Database Password (CHANGE THIS AFTER INSTALLATION) -->
        <record id="config_tenant_db_password" model="ir.config_parameter">
            <field name="key">saas.tenant_db_password</field>
            <field name="value">odoo</field>
        </record>

        <!--
        NOTE: After installation, update saas.tenant_db_password via:
        Settings > Technical > System Parameters

        For production, consider using a secrets manager or environment variables.
        -->
    </data>
</odoo>
