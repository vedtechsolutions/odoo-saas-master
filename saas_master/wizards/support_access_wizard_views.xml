<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="support_access_wizard_view_form" model="ir.ui.view">
        <field name="name">saas.support.access.wizard.form</field>
        <field name="model">saas.support.access.wizard</field>
        <field name="arch" type="xml">
            <form string="Support Access">
                <div class="alert alert-warning mb-3" role="alert">
                    <i class="fa fa-exclamation-triangle" title="Warning"/>
                    <strong>Support Access Mode</strong> - Your access to this instance has been logged for audit purposes.
                </div>
                <group>
                    <group string="Instance">
                        <field name="instance_id" readonly="1"/>
                        <field name="instance_url" widget="url"/>
                    </group>
                    <group string="Admin Credentials">
                        <field name="admin_login" widget="CopyClipboardChar"/>
                        <field name="admin_password" widget="CopyClipboardChar"/>
                    </group>
                </group>
                <div class="text-muted mt-2">
                    <p><i class="fa fa-info-circle" title="Info"/> Click the copy icons next to username/password to copy them to clipboard, then click "Open Instance" to login.</p>
                </div>
                <footer>
                    <button name="action_open_instance" type="object"
                            string="Open Instance" class="btn-primary"
                            icon="fa-external-link"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
