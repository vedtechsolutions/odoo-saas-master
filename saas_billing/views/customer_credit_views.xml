<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== CUSTOMER CREDIT VIEWS ==================== -->

    <!-- Credit Form View -->
    <record id="saas_customer_credit_view_form" model="ir.ui.view">
        <field name="name">saas.customer.credit.form</field>
        <field name="model">saas.customer.credit</field>
        <field name="arch" type="xml">
            <form string="Customer Credit">
                <sheet>
                    <div class="oe_title">
                        <label for="reference"/>
                        <h1><field name="reference" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="credit_type"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="expires_at"/>
                            <field name="is_expired"/>
                        </group>
                    </group>
                    <group string="Usage" invisible="amount &lt;= 0">
                        <group>
                            <field name="used_amount"/>
                            <field name="remaining_amount"/>
                        </group>
                        <group>
                            <field name="balance_after"/>
                        </group>
                    </group>
                    <group>
                        <field name="transaction_id"/>
                        <field name="created_by"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Credit List View -->
    <record id="saas_customer_credit_view_list" model="ir.ui.view">
        <field name="name">saas.customer.credit.list</field>
        <field name="model">saas.customer.credit</field>
        <field name="arch" type="xml">
            <list string="Customer Credits" decoration-muted="is_expired" decoration-danger="amount &lt; 0">
                <field name="create_date" string="Date"/>
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="name"/>
                <field name="credit_type" widget="badge"/>
                <field name="amount" sum="Total"/>
                <field name="used_amount" sum="Used"/>
                <field name="remaining_amount" sum="Remaining"/>
                <field name="expires_at"/>
                <field name="is_expired" widget="boolean"/>
                <field name="balance_after"/>
            </list>
        </field>
    </record>

    <!-- Credit Search View -->
    <record id="saas_customer_credit_view_search" model="ir.ui.view">
        <field name="name">saas.customer.credit.search</field>
        <field name="model">saas.customer.credit</field>
        <field name="arch" type="xml">
            <search string="Customer Credits">
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="name"/>
                <separator/>
                <filter name="credits" string="Credits" domain="[('amount', '&gt;', 0)]"/>
                <filter name="usages" string="Usages" domain="[('amount', '&lt;', 0)]"/>
                <separator/>
                <filter name="prepaid" string="Prepaid" domain="[('credit_type', '=', 'prepaid')]"/>
                <filter name="refund" string="Refund" domain="[('credit_type', '=', 'refund')]"/>
                <filter name="promotional" string="Promotional" domain="[('credit_type', '=', 'promotional')]"/>
                <separator/>
                <filter name="expired" string="Expired" domain="[('is_expired', '=', True)]"/>
                <filter name="active" string="Active" domain="[('is_expired', '=', False), ('remaining_amount', '&gt;', 0)]"/>
                <separator/>
                <filter name="group_partner" string="Customer" context="{'group_by': 'partner_id'}"/>
                <filter name="group_type" string="Type" context="{'group_by': 'credit_type'}"/>
                <filter name="group_date" string="Date" context="{'group_by': 'create_date:month'}"/>
            </search>
        </field>
    </record>

    <!-- Credit Actions -->
    <record id="saas_customer_credit_action" model="ir.actions.act_window">
        <field name="name">Customer Credits</field>
        <field name="res_model">saas.customer.credit</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No customer credits recorded
            </p>
            <p>
                Credits can be added for prepayment, refunds, or promotional purposes.
            </p>
        </field>
    </record>

    <record id="saas_customer_credit_action_active" model="ir.actions.act_window">
        <field name="name">Active Credits</field>
        <field name="res_model">saas.customer.credit</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_expired', '=', False), ('remaining_amount', '&gt;', 0)]</field>
    </record>

    <!-- ==================== PARTNER CREDIT EXTENSION ==================== -->

    <!-- Extend Partner Form with Credits -->
    <record id="res_partner_view_form_credit" model="ir.ui.view">
        <field name="name">res.partner.form.credit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_credits" type="object"
                        class="oe_stat_button" icon="fa-credit-card"
                        groups="saas_billing.group_saas_billing_user">
                    <field name="credit_balance" widget="statinfo" string="Credit Balance"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- ==================== ADD CREDIT WIZARD ==================== -->

    <record id="saas_add_credit_wizard_view_form" model="ir.ui.view">
        <field name="name">saas.add.credit.wizard.form</field>
        <field name="model">saas.add.credit.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Credit">
                <group>
                    <field name="partner_id" readonly="1"/>
                    <field name="current_balance" readonly="1"/>
                </group>
                <group>
                    <field name="amount"/>
                    <field name="credit_type"/>
                    <field name="description"/>
                    <field name="expires_days"/>
                </group>
                <footer>
                    <button name="action_add_credit" string="Add Credit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
