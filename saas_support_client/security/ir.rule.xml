<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules for saas_support_client module -->
    <!-- Protects support session data on tenant instances -->

    <!-- System admins have full access to all support sessions -->
    <record id="rule_support_session_admin" model="ir.rule">
        <field name="name">Support Session: Admin full access</field>
        <field name="model_id" ref="model_saas_support_session"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <!-- Regular users can only see sessions for their own user -->
    <record id="rule_support_session_user_own" model="ir.rule">
        <field name="name">Support Session: Users see own</field>
        <field name="model_id" ref="model_saas_support_session"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
