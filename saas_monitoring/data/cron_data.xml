<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ==================== CRON JOBS ==================== -->

        <!-- Collect Metrics - Every 5 minutes -->
        <record id="cron_collect_metrics" model="ir.cron">
            <field name="name">SaaS: Collect Instance Metrics</field>
            <field name="model_id" ref="saas_master.model_saas_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_collect_all_metrics()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>

        <!-- Cleanup Old Logs - Daily -->
        <record id="cron_cleanup_logs" model="ir.cron">
            <field name="name">SaaS: Cleanup Old Usage Logs</field>
            <field name="model_id" ref="model_saas_usage_log"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Cleanup Old Alerts - Weekly -->
        <record id="cron_cleanup_alerts" model="ir.cron">
            <field name="name">SaaS: Cleanup Old Alerts</field>
            <field name="model_id" ref="model_saas_alert"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_alerts(days=90)</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <!-- Sync Instance States - Every hour -->
        <record id="cron_sync_instances" model="ir.cron">
            <field name="name">SaaS: Sync Instance States</field>
            <field name="model_id" ref="saas_master.model_saas_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_instances()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>

        <!-- Discover Orphan Containers - Daily -->
        <record id="cron_discover_containers" model="ir.cron">
            <field name="name">SaaS: Discover Orphan Containers</field>
            <field name="model_id" ref="saas_master.model_saas_instance"/>
            <field name="state">code</field>
            <field name="code">model.discover_containers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
