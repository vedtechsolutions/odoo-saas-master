<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
        <!-- Scheduled action for merchant-managed recurring payments -->
        <record id="ir_cron_powertranz_process_recurring_payments" model="ir.cron">
            <field name="name">PowerTranz: Process Merchant-Managed Recurring Payments</field>
            <field name="model_id" ref="model_powertranz_recurring"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_recurring_payments()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Scheduled action for delayed recurring payment creation -->
        <record id="ir_cron_powertranz_create_delayed_recurring_payments" model="ir.cron">
            <field name="name">PowerTranz: Create Delayed Recurring Payments</field>
            <field name="model_id" ref="model_payment_transaction"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_delayed_recurring_payments()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
</odoo>
