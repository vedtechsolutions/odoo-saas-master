<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== QUEUE FORM VIEW ==================== -->
    <record id="saas_provisioning_queue_view_form" model="ir.ui.view">
        <field name="name">saas.provisioning.queue.form</field>
        <field name="model">saas.provisioning.queue</field>
        <field name="arch" type="xml">
            <form string="Queue Entry">
                <header>
                    <button name="action_retry" string="Retry"
                            type="object" class="btn-primary"
                            invisible="state != 'failed'"/>
                    <button name="action_cancel" string="Cancel"
                            type="object" class="btn-secondary"
                            invisible="state != 'pending'"
                            confirm="Are you sure you want to cancel this task?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,processing,completed,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Task">
                            <field name="action"/>
                            <field name="instance_id"/>
                            <field name="priority"/>
                        </group>
                        <group string="Relations">
                            <field name="partner_id"/>
                            <field name="server_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Retry Configuration">
                            <field name="attempt_count"/>
                            <field name="max_attempts"/>
                            <field name="next_retry_date"/>
                        </group>
                        <group string="Processing">
                            <field name="processing_lock_date"/>
                            <field name="processing_worker"/>
                        </group>
                    </group>
                    <group>
                        <group string="Timing">
                            <field name="create_date"/>
                            <field name="started_date"/>
                            <field name="completed_date"/>
                            <field name="duration_seconds"/>
                        </group>
                        <group string="Statistics">
                            <field name="error_count"/>
                        </group>
                    </group>
                    <notebook invisible="not error_message and not payload">
                        <page string="Error Details" name="errors"
                              invisible="not error_message">
                            <group>
                                <field name="error_message" readonly="1"/>
                            </group>
                            <group string="Traceback" invisible="not error_traceback">
                                <field name="error_traceback" readonly="1"
                                       widget="ace" options="{'mode': 'text'}"/>
                            </group>
                        </page>
                        <page string="Payload" name="payload"
                              invisible="not payload">
                            <field name="payload" readonly="1"
                                   widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Result" name="result"
                              invisible="not result">
                            <field name="result" readonly="1"
                                   widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ==================== QUEUE LIST VIEW ==================== -->
    <record id="saas_provisioning_queue_view_list" model="ir.ui.view">
        <field name="name">saas.provisioning.queue.list</field>
        <field name="model">saas.provisioning.queue</field>
        <field name="arch" type="xml">
            <list string="Queue"
                  decoration-danger="state == 'failed'"
                  decoration-warning="state == 'processing'"
                  decoration-success="state == 'completed'"
                  decoration-muted="state == 'cancelled'"
                  default_order="priority desc, create_date desc">
                <field name="name"/>
                <field name="action"/>
                <field name="instance_id"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="attempt_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'pending'"
                       decoration-warning="state == 'processing'"
                       decoration-danger="state == 'failed'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="create_date"/>
                <field name="completed_date"/>
                <field name="duration_seconds" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- ==================== QUEUE KANBAN VIEW ==================== -->
    <record id="saas_provisioning_queue_view_kanban" model="ir.ui.view">
        <field name="name">saas.provisioning.queue.kanban</field>
        <field name="model">saas.provisioning.queue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="action"/>
                <field name="instance_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="attempt_count"/>
                <field name="max_attempts"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge"
                                      t-attf-class="badge #{record.priority.raw_value == '3' ? 'bg-danger' : record.priority.raw_value == '2' ? 'bg-warning' : 'bg-secondary'}">
                                    <field name="priority"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <i class="fa fa-cog me-1" title="Action"/>
                                    <field name="action"/>
                                </div>
                                <div class="text-truncate">
                                    <i class="fa fa-server me-1" title="Instance"/>
                                    <field name="instance_id"/>
                                </div>
                                <div class="text-muted" t-if="record.attempt_count.raw_value > 0">
                                    <i class="fa fa-refresh me-1" title="Attempts"/>
                                    Attempt <field name="attempt_count"/>/<field name="max_attempts"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="create_date" widget="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ==================== QUEUE SEARCH VIEW ==================== -->
    <record id="saas_provisioning_queue_view_search" model="ir.ui.view">
        <field name="name">saas.provisioning.queue.search</field>
        <field name="model">saas.provisioning.queue</field>
        <field name="arch" type="xml">
            <search string="Search Queue">
                <field name="name"/>
                <field name="instance_id"/>
                <field name="partner_id"/>
                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_processing" string="Processing"
                        domain="[('state', '=', 'processing')]"/>
                <filter name="filter_completed" string="Completed"
                        domain="[('state', '=', 'completed')]"/>
                <filter name="filter_failed" string="Failed"
                        domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter name="filter_provision" string="Provisioning"
                        domain="[('action', '=', 'provision')]"/>
                <filter name="filter_urgent" string="Urgent"
                        domain="[('priority', '=', '3')]"/>
                <separator/>
                <filter name="filter_today" string="Today"
                        domain="[('create_date', '&gt;=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <filter name="group_state" string="State"
                        context="{'group_by': 'state'}"/>
                <filter name="group_action" string="Action"
                        context="{'group_by': 'action'}"/>
                <filter name="group_server" string="Server"
                        context="{'group_by': 'server_id'}"/>
                <filter name="group_partner" string="Customer"
                        context="{'group_by': 'partner_id'}"/>
                <filter name="group_priority" string="Priority"
                        context="{'group_by': 'priority'}"/>
            </search>
        </field>
    </record>

    <!-- ==================== QUEUE ACTIONS ==================== -->
    <record id="saas_provisioning_queue_action" model="ir.actions.act_window">
        <field name="name">Provisioning Queue</field>
        <field name="res_model">saas.provisioning.queue</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="saas_provisioning_queue_view_search"/>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No queue entries found
            </p>
            <p>
                Queue entries are created automatically when provisioning
                or managing SaaS instances.
            </p>
        </field>
    </record>

    <record id="saas_provisioning_queue_action_failed" model="ir.actions.act_window">
        <field name="name">Failed Tasks</field>
        <field name="res_model">saas.provisioning.queue</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="saas_provisioning_queue_view_search"/>
        <field name="domain">[('state', '=', 'failed')]</field>
    </record>

</odoo>
