<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== CATEGORY FORM VIEW ==================== -->
    <record id="saas_ticket_category_view_form" model="ir.ui.view">
        <field name="name">saas.ticket.category.form</field>
        <field name="model">saas.ticket.category</field>
        <field name="arch" type="xml">
            <form string="Ticket Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tickets" type="object"
                                class="oe_stat_button" icon="fa-ticket">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="open_ticket_count"/>
                                </span>
                                <span class="o_stat_text">Open</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                        <group string="Assignment">
                            <field name="default_user_id"/>
                            <field name="team_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <group string="SLA Settings">
                        <group>
                            <field name="sla_response_time"/>
                        </group>
                        <group>
                            <field name="sla_resolution_time"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================== CATEGORY LIST VIEW ==================== -->
    <record id="saas_ticket_category_view_list" model="ir.ui.view">
        <field name="name">saas.ticket.category.list</field>
        <field name="model">saas.ticket.category</field>
        <field name="arch" type="xml">
            <list string="Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="default_user_id"/>
                <field name="sla_response_time"/>
                <field name="sla_resolution_time"/>
                <field name="open_ticket_count"/>
                <field name="ticket_count"/>
            </list>
        </field>
    </record>

    <!-- ==================== CATEGORY KANBAN VIEW ==================== -->
    <record id="saas_ticket_category_view_kanban" model="ir.ui.view">
        <field name="name">saas.ticket.category.kanban</field>
        <field name="model">saas.ticket.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="open_ticket_count"/>
                <field name="ticket_count"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value}">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    Code: <field name="code"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge text-bg-primary">
                                        <field name="open_ticket_count"/> open
                                    </span>
                                    <span class="badge text-bg-secondary ms-1">
                                        <field name="ticket_count"/> total
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ==================== CATEGORY SEARCH VIEW ==================== -->
    <record id="saas_ticket_category_view_search" model="ir.ui.view">
        <field name="name">saas.ticket.category.search</field>
        <field name="model">saas.ticket.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ==================== CATEGORY ACTION ==================== -->
    <record id="saas_ticket_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">saas.ticket.category</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="saas_ticket_category_view_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create ticket categories
            </p>
            <p>
                Categories help organize tickets and set SLA targets.
            </p>
        </field>
    </record>

</odoo>
