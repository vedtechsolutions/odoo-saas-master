<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Default Ticket Categories -->

    <record id="category_technical" model="saas.ticket.category">
        <field name="name">Technical Support</field>
        <field name="code">technical</field>
        <field name="description">Technical issues, bugs, errors, and system problems</field>
        <field name="sequence">10</field>
        <field name="color">4</field>
        <field name="sla_response_time">4.0</field>
        <field name="sla_resolution_time">24.0</field>
    </record>

    <record id="category_billing" model="saas.ticket.category">
        <field name="name">Billing &amp; Payments</field>
        <field name="code">billing</field>
        <field name="description">Invoice questions, payment issues, subscription changes</field>
        <field name="sequence">20</field>
        <field name="color">2</field>
        <field name="sla_response_time">8.0</field>
        <field name="sla_resolution_time">48.0</field>
    </record>

    <record id="category_feature" model="saas.ticket.category">
        <field name="name">Feature Request</field>
        <field name="code">feature</field>
        <field name="description">New feature suggestions and enhancement requests</field>
        <field name="sequence">30</field>
        <field name="color">10</field>
        <field name="sla_response_time">24.0</field>
        <field name="sla_resolution_time">168.0</field>
    </record>

    <record id="category_training" model="saas.ticket.category">
        <field name="name">Training &amp; How-To</field>
        <field name="code">training</field>
        <field name="description">Questions about how to use features, training requests</field>
        <field name="sequence">40</field>
        <field name="color">3</field>
        <field name="sla_response_time">8.0</field>
        <field name="sla_resolution_time">72.0</field>
    </record>

    <record id="category_account" model="saas.ticket.category">
        <field name="name">Account Management</field>
        <field name="code">account</field>
        <field name="description">User access, permissions, account setup</field>
        <field name="sequence">50</field>
        <field name="color">5</field>
        <field name="sla_response_time">4.0</field>
        <field name="sla_resolution_time">24.0</field>
    </record>

    <record id="category_other" model="saas.ticket.category">
        <field name="name">Other</field>
        <field name="code">other</field>
        <field name="description">General inquiries and miscellaneous requests</field>
        <field name="sequence">99</field>
        <field name="color">0</field>
        <field name="sla_response_time">24.0</field>
        <field name="sla_resolution_time">72.0</field>
    </record>

</odoo>
