<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Backup Restore Confirmation Wizard Form View -->
    <record id="backup_restore_wizard_view_form" model="ir.ui.view">
        <field name="name">saas.backup.restore.wizard.form</field>
        <field name="model">saas.backup.restore.wizard</field>
        <field name="arch" type="xml">
            <form string="Restore Backup">
                <group>
                    <group string="Backup Information">
                        <field name="backup_id" invisible="1"/>
                        <field name="backup_reference"/>
                        <field name="backup_date"/>
                        <field name="backup_size"/>
                    </group>
                    <group string="Target Instance">
                        <field name="instance_id" invisible="1"/>
                        <field name="instance_subdomain"/>
                        <field name="instance_state" widget="badge"
                               decoration-success="instance_state == 'running'"
                               decoration-warning="instance_state == 'stopped'"
                               decoration-danger="instance_state == 'error'"/>
                    </group>
                </group>
                <group>
                    <field name="warning_message" readonly="1" nolabel="1"
                           widget="text" class="text-danger"
                           style="font-weight: bold; white-space: pre-wrap;"/>
                </group>
                <group>
                    <field name="confirm_restore" widget="boolean_toggle"/>
                </group>
                <footer>
                    <button name="action_restore" string="Restore Backup"
                            type="object" class="btn-danger"
                            icon="fa-exclamation-triangle"
                            confirm="Are you absolutely sure? This action cannot be undone!"/>
                    <button name="action_cancel" string="Cancel"
                            type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
