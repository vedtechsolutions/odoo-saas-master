<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Trial Expiration Check - runs daily at 1 AM -->
        <record id="cron_check_trial_expiry" model="ir.cron">
            <field name="name">SaaS: Check Trial Expiration</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_trial_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"/>
        </record>

        <!-- Trial Warning Emails - runs daily at 9 AM -->
        <record id="cron_send_trial_warnings" model="ir.cron">
            <field name="name">SaaS: Send Trial Warning Emails</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_trial_warnings()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 09:00:00')"/>
        </record>

        <!-- Billing Check - runs daily at 2 AM -->
        <record id="cron_check_billing_due" model="ir.cron">
            <field name="name">SaaS: Check Billing Due</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_billing_due()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        </record>

        <!-- Cancelled Subscription Cleanup - runs daily at 3 AM (FIX Gap #5) -->
        <record id="cron_cleanup_cancelled_subscriptions" model="ir.cron">
            <field name="name">SaaS: Cleanup Cancelled Subscriptions</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="state">code</field>
            <field name="code">model.cron_cleanup_cancelled_subscriptions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 03:00:00')"/>
        </record>
    </data>
</odoo>
