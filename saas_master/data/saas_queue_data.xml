<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequence for queue references -->
        <record id="sequence_saas_provisioning_queue" model="ir.sequence">
            <field name="name">SaaS Provisioning Queue</field>
            <field name="code">saas.provisioning.queue</field>
            <field name="prefix">QUEUE/</field>
            <field name="padding">6</field>
        </record>

        <!-- Cron: Process Queue (every 5 minutes) - PQ-005 -->
        <record id="cron_process_provisioning_queue" model="ir.cron">
            <field name="name">SaaS: Process Provisioning Queue</field>
            <field name="model_id" ref="model_saas_provisioning_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

        <!-- Cron: Cleanup Old Queue Entries (daily at 4 AM) -->
        <record id="cron_cleanup_provisioning_queue" model="ir.cron">
            <field name="name">SaaS: Cleanup Old Queue Entries</field>
            <field name="model_id" ref="model_saas_provisioning_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_cleanup_old_entries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="priority">100</field>
        </record>

    </data>
</odoo>
